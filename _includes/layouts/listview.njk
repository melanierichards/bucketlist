{% include "head.njk" %}
{% include "header.njk" %}

<main role="main" class="list-view">
    <div class="masthead masthead--{{ slug }}">
        <h1 aria-label="{{ title }} bucket list" class="masthead__title">
            <span>{{ title }}</span>
        </h1>
        {% set baseSrc = slug %}
        {% include "masthead-image.njk" %}
    </div>
    <div class="list-view__content list-view__content--{{ slug }}">
        {{ content }}
        {% set items = lists[slug] %}
        <ol class="bucketlist">
            {% for item in items %}
                <li class="item {% if item.completed %}js-item--complete{% else %}js-item--incomplete{% endif %}">
                    {% if item.completed %}
                        <p>
                            <span class="sr-only">Completed:</span>
                            <span class="item__completed">{{ item.text }}</span>
                            {% if item.completedUrl %}
                                <a class="item__completed-link" href="{{ item.completedUrl }}" title="{{ item.completedTitle }}">Proof!</a>
                            {% endif %}
                        </p>
                    {% else %}
                        {% if item.url %}
                            <a href="{{ item.url }}">{{ item.text }}</a>
                        {% else %}
                            <p>{{ item.text }}</p>
                        {% endif %}
                    {% endif %}
                    {% if item.notes %}
                        <p class="item__notes">{{ item.notes }}</p>
                    {% endif %}
                </li>
            {% endfor %}
        </ol>
        {% if slug == 'pnw' %}
            <a class="next-link next-link--anywhere" href="/anywhere/">
                <svg aria-hidden="true" class="next-link__arrow" xmlns="http://www.w3.org/2000/svg" width="18" height="11"><g fill="none" stroke="#787878" stroke-miterlimit="10"><path d="M12.1 10.5l5-5-5-5"/><path d="M.9 1.7c0 .5.1 1 .3 1.4.6 1.3 1.9 2.3 3.5 2.3h12.5"/></g></svg>
                View the “Anywhere” bucket list
            </a>
        {% else %}
            <a class="next-link next-link--pnw" href="/pnw/">
                <svg aria-hidden="true" class="next-link__arrow" xmlns="http://www.w3.org/2000/svg" width="18" height="11"><g fill="none" stroke="#787878" stroke-miterlimit="10"><path d="M5.9 10.5l-5-5 5-5"/><path d="M17.1 1.7c0 .5-.1 1-.3 1.4-.6 1.3-1.9 2.3-3.5 2.3H.9"/></g></svg>
                View the “Pacific Northwest” bucket list
            </a>
        {% endif %}
    </div>
</main>

{% include "footer.njk" %}